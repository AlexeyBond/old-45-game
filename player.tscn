script/source = "extends KinematicBody2D

onready var colorRect = get_node('ColorRect')
onready var fade = get_node('../fade/fade_rect')
onready var body = get_node('')
onready var scoreboard = get_node('../scoreboard')
onready var start_origin_y = body.transform.get_origin().y

const JUMP_HEIGHT = 400
const JUMP_SPEED = 1000
const FALL_SPEED = 300
const SPEED_GROW_DELAY = 2
const SPEED_GROW_C = 1.03
const SPEED_GROW_A = 0

var game_speed = 1.0

var state_timer = 0
var speed_timer = SPEED_GROW_DELAY

func set_game_speed(speed):
	$AudioStreamPlayer.set_pitch_scale(max(1, speed))
	$AnimatedSprite.speed_scale = max(1, speed)
	game_speed = speed

var state

func set_state(new_state):
	match new_state:
		\"idle\":
			$AnimatedSprite.play(\"awaiting\")
			$nameSprite.play(\"default\")
			$nameSprite.visible = true
			# TODO: Set animation
			colorRect.color = Color.red
			set_game_speed(0)
			$AudioStreamPlayer.play()
		\"running\":
			$AnimatedSprite.play(\"running\")
			colorRect.color = Color.green
		\"jumping\":
			$nameSprite.visible = false
			$jumpPlayer.play()
			$AnimatedSprite.play(\"jumping\")
			if state == \"idle\":
				set_game_speed(1.0)
			colorRect.color = Color.blue
		\"falling\":
			# TODO: Set animation
			pass
		\"dying\":
			$AnimatedSprite.visible = false
			scoreboard.gameover()
			$Particles2D.emitting = true
			$deathPlayer.play()
			fade.visible = true
			fade.color.a = 0
			set_game_speed(0)
			$AudioStreamPlayer.stop()
	state = new_state

func do_jump():
	match state:
		\"idle\": set_state(\"jumping\")
		\"running\": set_state(\"jumping\")
		\"dead\": get_tree().reload_current_scene()

func do_kill():
	if [\"dying\", \"dead\"].count(state):
		return
	set_state(\"dying\")

func _ready():
	fade.visible = false
	$AnimatedSprite.flip_h = true
	set_state(\"idle\")
	randomize()

func try_grow_speed(delta):
	speed_timer -= delta
	if speed_timer < 0:
		speed_timer += SPEED_GROW_DELAY
		set_game_speed(game_speed * SPEED_GROW_C + SPEED_GROW_A)

func _process(delta):
	match state:
		\"running\":
			scoreboard.update_current(delta)
			try_grow_speed(delta)
		\"jumping\":
			scoreboard.update_current(delta)
			try_grow_speed(delta)
			body.translate(Vector2.UP * delta * JUMP_SPEED * game_speed)
			if (start_origin_y - body.transform.get_origin().y) > JUMP_HEIGHT:
				set_state(\"falling\")
		\"falling\":
			scoreboard.update_current(delta)
			try_grow_speed(delta)
			body.translate(Vector2.DOWN * delta * FALL_SPEED * game_speed)
			if (start_origin_y - body.transform.get_origin().y) <= 0:
				body.transform.get_origin().y = 0
				set_state(\"running\")
		\"dying\":
			var c = fade.color
			c.a = min(1.0, c.a + 0.03)
			if c.a > 0.9:
				set_state(\"dead\")
				c.a = 1.0
			fade.color = c
		\"dead\":
			state_timer += delta
			if state_timer > 7:
				do_jump()

func _input(event):
	if event.is_action_pressed(\"exit\"):
		get_tree().quit()
	if event.is_action_pressed(\"jump\"):
		do_jump()
"

